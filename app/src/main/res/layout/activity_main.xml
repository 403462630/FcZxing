<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">

    <fc.com.zxing.core.view.FcScanView
        android:id="@+id/fc_scan_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        scan:vibrate="false"
        scan:playBeep="true"
        scan:invertScan="false"
        scan:frontLightMode="off"
        scan:autoFocus="true"
        scan:decodeFormat="decode_PDF417|decode_QR"/>

    <Button
        android:id="@+id/bt_encode"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="生成二维码"/>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
